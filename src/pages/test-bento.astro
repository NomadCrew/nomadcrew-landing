---
// Test page for BentoFeatures component
// Verifies bento grid layout in isolation with responsive breakpoint indicators
import BaseLayout from '../layouts/BaseLayout.astro';
import BentoFeatures from '../components/react/BentoFeatures.tsx';
---

<BaseLayout title="Bento Grid Test" description="Testing bento features grid">
  <!-- Spacer to simulate page context -->
  <div class="h-32 bg-[var(--color-bg-primary)]"></div>

  <!-- Bento Features component -->
  <BentoFeatures client:visible />

  <!-- Manual verification checklist -->
  <div class="p-8 bg-[var(--color-bg-primary)] mt-8 max-w-2xl mx-auto">
    <h2 class="text-xl font-bold mb-4 text-[var(--color-text-primary)]">Bento Grid Verification</h2>
    <ul class="space-y-2 text-[var(--color-text-secondary)]">
      <li>[ ] Grid displays with variable card sizes</li>
      <li>[ ] Large card spans 2 columns and 2 rows on desktop</li>
      <li>[ ] Wide card spans 2 columns on desktop</li>
      <li>[ ] Cards have hover lift effect</li>
      <li>[ ] Icons display in accent color (coral/orange)</li>
      <li>[ ] Resize browser to test responsive behavior</li>
      <li>[ ] Mobile: all cards stack in single column</li>
      <li>[ ] Tablet (768px+): 2-column layout</li>
      <li>[ ] Desktop (1024px+): 4-column layout</li>
    </ul>
  </div>

  <!-- Viewport size indicator -->
  <div class="fixed bottom-4 right-4 bg-[var(--color-text-primary)] text-[var(--color-text-inverse)] px-3 py-1 rounded text-sm font-medium shadow-lg">
    <span class="md:hidden">Mobile (&lt;768px)</span>
    <span class="hidden md:inline lg:hidden">Tablet (768-1024px)</span>
    <span class="hidden lg:inline">Desktop (&gt;1024px)</span>
  </div>
</BaseLayout>
