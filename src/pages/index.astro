import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="NomadCrew - Coming Soon"
  description="The ultimate platform for digital nomads and remote workers"
>
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center p-8">
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-lg p-8 text-center">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">
        NomadCrew
      </h1>

      <p class="text-xl text-gray-700 mb-6">
        The ultimate platform for digital nomads and remote workers
      </p>

      <p class="text-gray-600">
        Coming soon...
      </p>
    </div>
  </main>
</BaseLayout>
